{
  "name": "tunview",
  "productName": "Tunview",
  "version": "1.0.0",
  "main": "main.js",
  "description": "",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^39.2.4",
    "electron-builder": "^25.0.0",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.tunview.desktop",
    "productName": "Tunview",
    "asarUnpack": [
      "resources/lib/**/*.jar"
    ],
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!resources/data/backup/**",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}"
    ],
    "extraResources": [
      {
        "from": "resources/",
        "to": "resources/"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "resources/static/assets/main/tunview_logo_img.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@codemirror/basic-setup": "^0.20.0",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lint": "^6.9.2",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.38.8",
    "adm-zip": "^0.5.16",
    "better-sqlite3": "^12.5.0",
    "chokidar": "^5.0.0"
  }
}
